@model IEnumerable<Project.Models.Cours>

@{
    ViewData["Title"] = "Gestion des Cours";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Gestion des Matières</h2>
    <a asp-action="CreateCourse" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nouveau Cours
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Enseignant Responsable</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.Titre</td>
                        <td>@(item.Description ?? "-")</td>
                        <td>
                            @if (item.Enseignant != null && item.Enseignant.Utilisateur != null)
                            {
                                <span class="badge bg-info text-dark">
                                    <i class="fas fa-chalkboard-teacher me-1"></i>
                                    @item.Enseignant.Utilisateur.Nom @item.Enseignant.Utilisateur.Prenom
                                </span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold">Non assigné (Erreur DB)</span>
                            }
                        </td>
                        <td class="text-end">
                            <form asp-action="DeleteCourse" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce cours ?');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>