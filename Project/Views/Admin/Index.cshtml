@model Project.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Tableau de Bord Administrateur";
}

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">Dashboards par mois</h2>
    </div>
</div>

<div class="row mb-5">

    <div class="col-md-3 mb-4">
        <div class="card shadow-sm border-left-warning h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Utilisateurs en Attente
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Model.UtilisateursEnAttente
                        </div>
                    </div>
                </div>
                <a asp-controller="Admin" asp-action="PendingUsers" class="small text-warning mt-2 d-block">Gérer</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card shadow-sm border-left-info h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Nouveaux Utilisateurs Aujourd'hui
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">5</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card shadow-sm border-left-success h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Utilisateurs Actifs
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @(Model.TotalEtudiants + Model.TotalEnseignants + Model.TotalSurveillants)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card shadow-sm border-left-primary h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Utilisateurs (DB)
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Model.TotalUtilisateurs
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="row">

    <div class="col-lg-8 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Inscriptions par Mois (Simulation)</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Répartition des Rôles</h6>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush small">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Étudiants
                        <span class="badge bg-primary rounded-pill">@Model.TotalEtudiants</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Enseignants
                        <span class="badge bg-warning rounded-pill">@Model.TotalEnseignants</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Surveillants
                        <span class="badge bg-info rounded-pill">@Model.TotalSurveillants</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="card shadow mt-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Actions Rapides</h6>
            </div>
            <div class="card-body text-center">
                <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-primary btn-block mb-2">Ajouter un Nouveau Compte</a>
                <a asp-controller="Admin" asp-action="PendingUsers" class="btn btn-warning btn-block">Voir les Approbations</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Récupération du contexte du canvas
            var ctx = document.getElementById('myChart').getContext('2d');

            // Récupération des données envoyées par le contrôleur (AdminController)
            // Assurez-vous que ChartLabels et ChartValues sont bien dans votre ViewModel
            var labels = @Html.Raw(Json.Serialize(Model.ChartLabels));
            var data = @Html.Raw(Json.Serialize(Model.ChartValues));

            // Création du graphique
            var myChart = new Chart(ctx, {
                type: 'line', // Type de graphique : ligne (courbe)
                data: {
                    labels: labels, // Les mois (Jan, Fév...)
                    datasets: [{
                        label: 'Nouvelles Inscriptions',
                        data: data, // Les chiffres (12, 19...)
                        backgroundColor: 'rgba(78, 115, 223, 0.05)', // Bleu très clair pour le fond
                        borderColor: 'rgba(78, 115, 223, 1)',       // Bleu "Primary" pour la ligne
                        pointRadius: 3,
                        pointBackgroundColor: "rgba(78, 115, 223, 1)",
                        pointBorderColor: "rgba(78, 115, 223, 1)",
                        pointHoverRadius: 3,
                        pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
                        pointHoverBorderColor: "rgba(78, 115, 223, 1)",
                        pointHitRadius: 10,
                        pointBorderWidth: 2,
                        tension: 0.3, // Courbure de la ligne (plus joli)
                        fill: true    // Remplir sous la courbe
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    layout: {
                        padding: {
                            left: 10,
                            right: 25,
                            top: 25,
                            bottom: 0
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false,
                                drawBorder: false
                            },
                            ticks: {
                                maxTicksLimit: 7
                            }
                        },
                        y: {
                            ticks: {
                                maxTicksLimit: 5,
                                padding: 10,
                                callback: function(value, index, values) {
                                    return value; // Afficher les nombres simplement
                                }
                            },
                            grid: {
                                color: "rgb(234, 236, 244)",
                                zeroLineColor: "rgb(234, 236, 244)",
                                drawBorder: false,
                                borderDash: [2],
                                zeroLineBorderDash: [2]
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false // Masquer la légende par défaut pour un look épuré
                        },
                        tooltip: {
                            backgroundColor: "rgb(255,255,255)",
                            bodyColor: "#858796",
                            titleMarginBottom: 10,
                            titleColor: '#6e707e',
                            titleFont: { size: 14 },
                            borderColor: '#dddfeb',
                            borderWidth: 1,
                            xPadding: 15,
                            yPadding: 15,
                            displayColors: false,
                            intersect: false,
                            mode: 'index',
                            caretPadding: 10,
                        }
                    }
                }
            });
        });
    </script>
}