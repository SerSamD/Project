@model IEnumerable<Project.Models.Utilisateur>

@{
    ViewData["Title"] = "Comptes en Attente d'Approbation";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    @* Affichage des messages temporaires (succès ou erreur) *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Aucun compte utilisateur n'est en attente d'approbation pour le moment.
        </div>
    }
    else
    {
        <h3>Utilisateurs en attente (@Model.Count())</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nom d'utilisateur</th>
                    <th>Nom Complet</th>
                    <th>Rôle Demandé</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.NomUtilisateur</td>
                        <td>@user.Prenom @user.Nom</td>
                        <td>
                            @user.PendingRole
                        </td>
                        <td>@(string.IsNullOrEmpty(user.Email) ? "Non spécifié" : user.Email)</td>
                        <td>
                            <div class="d-flex gap-2">
                                @* Formulaire pour l'Approbation *@
                                <form asp-action="ApproveUser" method="post" onsubmit="return confirm('Êtes-vous sûr d\'approuver @user.NomUtilisateur comme @user.PendingRole ?');">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">Approuver</button>
                                </form>

                                @* Formulaire pour le Rejet (Suppression) *@
                                <form asp-action="RejectUser" method="post" onsubmit="return confirm('Êtes-vous sûr de REJETER et SUPPRIMER le compte de @user.NomUtilisateur ? Cette action est irréversible.');">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Rejeter</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4">
        <a asp-action="Index">Retour au Tableau de Bord Admin</a>
    </div>
</div>