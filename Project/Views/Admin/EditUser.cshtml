@model Project.Models.Utilisateur
@{
    ViewData["Title"] = "Modifier l'Utilisateur";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white"><h4 class="mb-0 fs-5"><i class="fas fa-user-edit me-2"></i>Modifier</h4></div>
                <div class="card-body p-4">
                    <form asp-action="EditUser" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="MotDePasseHash" />
                        <input type="hidden" asp-for="Role" />
                        <input type="hidden" asp-for="IsApproved" />
                        <input type="hidden" asp-for="PendingRole" />

                        <div class="mb-3">
                            <label asp-for="NomUtilisateur" class="form-label fw-bold">Identifiant</label>
                            <input asp-for="NomUtilisateur" class="form-control" required />
                            <span asp-validation-for="NomUtilisateur" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nom" class="form-label fw-bold">Nom</label>
                            <input asp-for="Nom" class="form-control" required />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Prenom" class="form-label fw-bold">Prénom</label>
                            <input asp-for="Prenom" class="form-control" required />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" type="email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3 p-3 bg-light rounded border">
                            <label class="form-label fw-bold text-primary"><i class="fas fa-key me-2"></i>Nouveau Mot de Passe</label>
                            <input type="password" name="nouveauMotDePasse" class="form-control" placeholder="Laisser vide pour ne pas changer" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">Rôle</label>
                            <input type="text" class="form-control bg-light" value="@Model.Role" readonly />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="ActiveUsers" class="btn btn-secondary px-4">Annuler</a>
                            <button type="submit" class="btn btn-success px-4">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}