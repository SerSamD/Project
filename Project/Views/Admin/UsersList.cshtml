@model IEnumerable<Project.Models.Utilisateur>

@{
    ViewData["Title"] = "Liste et Suppression des Utilisateurs Actifs";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <p class="lead">Liste de tous les utilisateurs actifs (non Admin) du système.</p>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Aucun utilisateur actif n'a été trouvé (hors Admin).
        </div>
    }
    else
    {
        <h3>Comptes Actifs (@Model.Count())</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom d'utilisateur</th>
                    <th>Nom Complet</th>
                    <th>Rôle</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.NomUtilisateur</td>
                        <td>@user.Prenom @user.Nom</td>
                        <td><span class="badge bg-secondary">@user.Role</span></td>
                        <td>@(string.IsNullOrEmpty(user.Email) ? "Non spécifié" : user.Email)</td>
                        <td>
                            @* Formulaire pour la Suppression Définitive *@
                            <form asp-action="DeleteUser" method="post" onsubmit="return confirm('⚠️ Êtes-vous ABSOLUMENT SÛR de vouloir SUPPRIMER DÉFINITIVEMENT le compte de @user.NomUtilisateur (@user.Role) ? Cette action est irréversible et supprimera le profil associé.');">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4">
        <a asp-action="Index">Retour au Tableau de Bord Admin</a>
    </div>
</div>