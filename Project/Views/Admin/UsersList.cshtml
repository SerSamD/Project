@model List<Project.Models.Utilisateur>
@{
    ViewData["Title"] = "Utilisateurs Actifs";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-1 fw-bold text-dark">Utilisateurs Actifs</h2>
        <span class="badge bg-primary fs-6 px-3 py-2 rounded-pill">@Model.Count comptes</span>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body p-2 d-flex justify-content-center bg-light rounded">
            @{
                string filter = ViewBag.CurrentFilter as string ?? "All";
            }
            <div class="btn-group">
                <a asp-action="ActiveUsers" asp-route-role="All" class="btn @(filter == "All" ? "btn-primary" : "btn-outline-primary")">Tous</a>
                <a asp-action="ActiveUsers" asp-route-role="Etudiant" class="btn @(filter == "Etudiant" ? "btn-primary" : "btn-outline-primary")">Étudiants</a>
                <a asp-action="ActiveUsers" asp-route-role="Enseignant" class="btn @(filter == "Enseignant" ? "btn-primary" : "btn-outline-primary")">Enseignants</a>
                <a asp-action="ActiveUsers" asp-route-role="Surveillant" class="btn @(filter == "Surveillant" ? "btn-primary" : "btn-outline-primary")">Surveillants</a>
            </div>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light"><tr><th class="ps-4">Utilisateur</th><th>Nom Complet</th><th class="text-center">Rôle</th><th>Email</th><th class="text-center">Actions</th></tr></thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.NomUtilisateur</td>
                                <td>@item.Nom @item.Prenom</td>
                                <td class="text-center"><span class="badge bg-secondary">@item.Role</span></td>
                                <td class="text-muted">@item.Email</td>
                                <td class="text-center">
                                    <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fas fa-pen"></i></a>
                                    <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirm('Confirmer la suppression ?');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>