@model IEnumerable<Project.Models.Utilisateur>

@{
    ViewData["Title"] = "Utilisateurs Actifs";
    string currentFilter = ViewBag.CurrentFilter as string ?? "All";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-dark fw-bold mb-1">Utilisateurs Actifs</h2>
        <p class="text-muted mb-0">Gérez les comptes validés ayant accès à la plateforme.</p>
    </div>

    <div class="badge bg-primary fs-6 rounded-pill px-3 py-2">
        @Model.Count() comptes trouvés
    </div>
</div>

<div class="card shadow-sm border-0 mb-4 rounded-4">
    <div class="card-body p-2">
        <div class="nav nav-pills nav-fill gap-2 p-1 bg-light rounded-pill" role="tablist">

            <a asp-action="ActiveUsers" asp-route-role="All"
               class="nav-link rounded-pill fw-bold @(currentFilter == "All" ? "active shadow-sm" : "")">
                <i class="fas fa-users me-2"></i> Tous
            </a>

            <a asp-action="ActiveUsers" asp-route-role="Etudiant"
               class="nav-link rounded-pill fw-bold @(currentFilter == "Etudiant" ? "active shadow-sm" : "")">
                <i class="fas fa-user-graduate me-2"></i> Étudiants
            </a>

            <a asp-action="ActiveUsers" asp-route-role="Enseignant"
               class="nav-link rounded-pill fw-bold @(currentFilter == "Enseignant" ? "active shadow-sm" : "")">
                <i class="fas fa-chalkboard-teacher me-2"></i> Enseignants
            </a>

            <a asp-action="ActiveUsers" asp-route-role="Surveillant"
               class="nav-link rounded-pill fw-bold @(currentFilter == "Surveillant" ? "active shadow-sm" : "")">
                <i class="fas fa-user-shield me-2"></i> Surveillants
            </a>

        </div>
    </div>
</div>

<div class="card shadow border-0 rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Utilisateur</th>
                        <th class="py-3">Nom Complet</th>
                        <th class="py-3">Rôle</th>
                        <th class="py-3">Email</th>
                        <th class="text-end pe-4 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-3 text-secondary border" style="width: 40px; height: 40px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <span class="fw-bold text-dark">@item.NomUtilisateur</span>
                                </div>
                            </td>

                            <td>@item.Nom @item.Prenom</td>

                            <td>
                                @if (item.Role == "Etudiant")
                                {
                                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">Étudiant</span>
                                }
                                else if (item.Role == "Enseignant")
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill">Enseignant</span>
                                }
                                else if (item.Role == "Surveillant")
                                {
                                    <span class="badge bg-info bg-opacity-10 text-info px-3 py-2 rounded-pill">Surveillant</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Role</span>
                                }
                            </td>

                            <td class="text-muted">@item.Email</td>

                            <td class="text-end pe-4">
                                <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Attention : Cette action est irréversible. Voulez-vous vraiment supprimer cet utilisateur ?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                        <i class="fas fa-trash-alt me-1"></i> Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-filter fa-3x mb-3 text-secondary opacity-25"></i>
                                <p>Aucun utilisateur trouvé pour ce filtre.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>