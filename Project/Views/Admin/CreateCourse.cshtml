@model Project.Models.Cours

@{
    ViewData["Title"] = "Créer un Cours";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow border-0 rounded-4 mt-4">
            <div class="card-header bg-white py-3 border-bottom-0">
                <h4 class="fw-bold text-primary mb-0"><i class="fas fa-plus-circle me-2"></i> Ajouter une Matière</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="CreateCourse" method="post">
                    <div class="mb-3">
                        <label asp-for="Titre" class="form-label fw-bold">Titre du cours</label>
                        <input asp-for="Titre" class="form-control" placeholder="Ex: Développement C#" />
                        <span asp-validation-for="Titre" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Description (Optionnel)</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brève description du contenu..."></textarea>
                    </div>

                    <div class="mb-4">
                        <label asp-for="EnseignantId" class="form-label fw-bold">Enseignant Responsable</label>
                        <select asp-for="EnseignantId" class="form-select" asp-items="ViewBag.Teachers">
                            <option value="">-- Sélectionner un professeur --</option>
                        </select>
                        <span asp-validation-for="EnseignantId" class="text-danger small"></span>
                        <div class="form-text">Seuls les enseignants dont le compte est validé apparaissent ici.</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="ManageCourses" class="btn btn-light me-2">Annuler</a>
                        <button type="submit" class="btn btn-primary px-4 fw-bold">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>