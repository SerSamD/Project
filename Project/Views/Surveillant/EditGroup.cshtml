@model Project.Models.Groupe

@{
    ViewData["Title"] = "Modifier le Groupe";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 fs-5">
                        <i class="fas fa-pen me-2"></i>Modifier le Groupe
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditGroup" method="post">

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="SurveillantId" />

                        <div class="mb-4">
                            <label asp-for="Nom" class="form-label fw-bold">Nom du Groupe</label>
                            <input asp-for="Nom" class="form-control form-control-lg" placeholder="Ex: Terminale S2" required />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="ManageGroups" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Annuler
                            </a>

                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save me-2"></i>Enregistrer
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}