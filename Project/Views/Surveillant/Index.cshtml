@{
    ViewData["Title"] = "Espace Surveillant";
    // NOTE : On a retiré "Layout = null" pour qu'il utilise le nouveau _Layout.cshtml
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h2 class="fw-bold text-dark">Vue d'ensemble</h2>
        <p class="text-muted mb-0">Bienvenue sur votre tableau de bord de gestion.</p>
    </div>
    <button class="btn btn-light shadow-sm"><i class="fas fa-bell text-warning"></i> Notifications</button>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 p-3">
            <div class="d-flex align-items-center mb-3">
                <div class="bg-light p-3 rounded-3 text-primary me-3">
                    <i class="fas fa-users fa-2x"></i>
                </div>
                <h5 class="fw-bold mb-0">Mes Groupes</h5>
            </div>
            <p class="text-muted small">Gérez la liste des groupes et accédez aux profils des étudiants.</p>
            <a asp-action="ManageGroups" class="btn btn-primary w-100 mt-2">Gérer</a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 p-3">
            <div class="d-flex align-items-center mb-3">
                <div class="bg-light p-3 rounded-3 text-success me-3">
                    <i class="fas fa-user-plus fa-2x"></i>
                </div>
                <h5 class="fw-bold mb-0">Inscriptions</h5>
            </div>
            <p class="text-muted small">Assignez les nouveaux étudiants inscrits à leurs groupes respectifs.</p>
            <a asp-action="AssignStudents" class="btn btn-success w-100 mt-2 text-white">Assigner</a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 p-3">
            <div class="d-flex align-items-center mb-3">
                <div class="bg-light p-3 rounded-3 text-warning me-3">
                    <i class="fas fa-calendar-day fa-2x"></i>
                </div>
                <h5 class="fw-bold mb-0">Planning</h5>
            </div>
            <p class="text-muted small">Consultez et modifiez les emplois du temps de la semaine.</p>
            <a asp-action="ManageSchedule" class="btn btn-warning w-100 mt-2 text-dark">Planifier</a>
        </div>
    </div>
</div>