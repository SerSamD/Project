@{
    ViewData["Title"] = "Espace Surveillant";
}

<div class="dashboard-page">
    <div class="page-header fade-in-up">
  <div>
        <h1 class="page-title">Espace Surveillant</h1>
        <p class="page-subtitle">
      Bienvenue sur votre tableau de bord de gestion scolaire
 </p>
        </div>
 </div>

    <div class="action-cards-grid fade-in-up">
  <a asp-controller="Surveillant" asp-action="ManageGroups" class="action-card">
            <div class="action-card-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
  <i class="fas fa-users-rectangle"></i>
    </div>
       <h3 class="action-card-title">Mes Groupes</h3>
            <p class="action-card-description">
       Créez et gérez vos groupes d'étudiants, visualisez la liste complète
     </p>
        </a>

   <a asp-controller="Surveillant" asp-action="AssignStudents" class="action-card">
    <div class="action-card-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
    <i class="fas fa-user-plus"></i>
   </div>
 <h3 class="action-card-title">Inscriptions</h3>
   <p class="action-card-description">
       Assignez les nouveaux étudiants inscrits dans vos différents groupes
 </p>
 </a>

   <a asp-controller="Surveillant" asp-action="ManageSchedule" class="action-card">
     <div class="action-card-icon" style="background: linear-gradient(135deg, #ffa502 0%, #ffb744 100%);">
     <i class="fas fa-calendar-days"></i>
     </div>
      <h3 class="action-card-title">Planning</h3>
   <p class="action-card-description">
    Gérez les emplois du temps, ajoutez des cours et organisez les horaires
            </p>
        </a>

        <a asp-controller="Surveillant" asp-action="ConsultGrades" class="action-card">
       <div class="action-card-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
  <i class="fas fa-clipboard-check"></i>
     </div>
  <h3 class="action-card-title">Publication Notes</h3>
            <p class="action-card-description">
    Validez et publiez les notes saisies par les enseignants aux étudiants
    </p>
        </a>
    </div>
</div>