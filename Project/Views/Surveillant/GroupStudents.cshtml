@model Project.Models.Groupe

@{
    ViewData["Title"] = "Liste des Étudiants";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">
                <i class="fas fa-users me-2 text-primary"></i>@Model.Nom
            </h2>
            <p class="text-muted">Gestion des étudiants du groupe</p>
        </div>
        <div>
            <a asp-action="AssignStudents" asp-route-groupId="@Model.Id" class="btn btn-success me-2">
                <i class="fas fa-user-plus me-2"></i>Ajouter un étudiant
            </a>

            <a asp-action="ManageGroups" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span class="fw-bold">Effectif</span>
            <span class="badge bg-white text-primary">@Model.Etudiants.Count étudiant(s)</span>
        </div>
        <div class="card-body p-0">
            @if (Model.Etudiants.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Nom</th>
                                <th>Prénom</th>
                                <th>Email</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var etudiant in Model.Etudiants)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@etudiant.Utilisateur?.Nom</td>
                                    <td>@etudiant.Utilisateur?.Prenom</td>
                                    <td>
                                        <a href="mailto:@etudiant.Utilisateur?.Email" class="text-decoration-none">
                                            @etudiant.Utilisateur?.Email
                                        </a>
                                    </td>

                                    <td class="text-center">
                                        <form asp-action="RemoveStudentFromGroup" method="post" class="d-inline">
                                            <input type="hidden" name="studentId" value="@etudiant.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Êtes-vous sûr de vouloir retirer cet étudiant du groupe ?');"
                                                    title="Retirer du groupe">
                                                <i class="fas fa-trash-alt me-1"></i> Retirer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-graduate fa-3x text-muted mb-3"></i>
                    <p class="text-muted fw-bold">Aucun étudiant dans ce groupe pour le moment.</p>
                    <a asp-action="AssignStudents" asp-route-groupId="@Model.Id" class="btn btn-primary mt-2">
                        Commencer à ajouter des étudiants
                    </a>
                </div>
            }
        </div>
    </div>
</div>