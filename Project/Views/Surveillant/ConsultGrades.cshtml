@model Project.ViewModels.GradeManagementViewModel

@{
    ViewData["Title"] = "Publication des Notes";
    bool arePublished = ViewBag.AreNotesPublished ?? false;
}

<h2 class="mb-4">Publication des Notes</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form method="get" asp-action="ConsultGrades" class="row g-3 align-items-end">
            <div class="col-md-5">
                <label class="form-label fw-bold">Groupe</label>
                <select name="groupId" class="form-select" asp-items="Model.Groupes" onchange="this.form.submit()">
                    <option value="">-- Choisir un groupe --</option>
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label fw-bold">Matière</label>
                <select name="coursId" class="form-select" asp-items="Model.Cours" onchange="this.form.submit()">
                    <option value="">-- Choisir une matière --</option>
                </select>
            </div>
        </form>
    </div>
</div>

@if (Model.SelectedGroupId.HasValue && Model.SelectedCoursId.HasValue)
{
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="m-0 text-primary">Résultats saisis par l'enseignant</h5>

            @if (arePublished)
            {
                <span class="badge bg-success px-3 py-2"><i class="fas fa-check-circle me-2"></i> PUBLIÉ</span>
            }
            else
            {
                <span class="badge bg-warning text-dark px-3 py-2"><i class="fas fa-clock me-2"></i> EN ATTENTE</span>
            }
        </div>

        <div class="card-body p-0">
            <table class="table table-striped mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Étudiant</th>
                        <th class="text-center" style="width: 150px;">Note (/20)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students)
                    {
                        <tr>
                            <td class="fw-bold">@student.EtudiantNom</td>
                            <td class="text-center">
                                @if (student.Note.HasValue)
                                {
                                    <span class="fw-bold @(student.Note < 10 ? "text-danger" : "text-dark")">
                                        @student.Note
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">-</span>
                                }
                            </td>
                        </tr>
                    }
                    @if (Model.Students.Count == 0)
                    {
                        <tr><td colspan="2" class="text-center p-3">Aucune note saisie pour l'instant.</td></tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Students.Count > 0 && !arePublished)
        {
            <div class="card-footer bg-white text-end">
                <form asp-action="PublishGrades" method="post">
                    <input type="hidden" name="groupId" value="@Model.SelectedGroupId" />
                    <input type="hidden" name="coursId" value="@Model.SelectedCoursId" />

                    <button type="submit" class="btn btn-primary fw-bold"
                            onclick="return confirm('Êtes-vous sûr de vouloir envoyer ces notes aux étudiants ?');">
                        <i class="fas fa-paper-plane me-2"></i> Publier les résultats
                    </button>
                </form>
            </div>
        }
    </div>
}