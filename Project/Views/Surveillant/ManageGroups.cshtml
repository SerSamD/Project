@model List<Project.Models.Groupe>

@{
    ViewData["Title"] = "Gérer les Groupes";
    var supervisorId = ViewData["SupervisorId"] != null ? (int)ViewData["SupervisorId"] : 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<h1>Gérer Mes Groupes</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-4 shadow">
    <div class="card-header bg-primary text-white">
        <i class="fas fa-plus-circle me-2"></i>Créer un Nouveau Groupe
    </div>
    <div class="card-body">
        <form asp-action="CreateGroup" method="post">
            <input type="hidden" name="SurveillantId" value="@supervisorId" />
            <div class="row">
                <div class="col-md-6">
                    <label for="Nom" class="form-label fw-bold">Nom du Groupe (Ex: Terminale S1)</label>
                    <input type="text" name="Nom" class="form-control" required placeholder="Entrez le nom du groupe..." />
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-success">
                        Créer le Groupe
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<h2>Groupes Gérés</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>Vous n'avez pas encore de groupes sous votre responsabilité.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nom du Groupe</th>
                    <th class="text-center">Effectif</th>
                    <th class="text-center" style="min-width: 400px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var groupe in Model)
                {
                    <tr>
                        <td class="fw-bold">@groupe.Nom</td>
                        <td class="text-center">
                            <span class="badge bg-secondary">
                                @(groupe.Etudiants?.Count ?? 0) étudiant(s)
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">

                                <a asp-controller="Surveillant" asp-action="AssignStudents" asp-route-groupId="@groupe.Id"
                                   class="btn btn-sm btn-info text-white">
                                    <i class="fas fa-user-plus me-1"></i> Assigner
                                </a>

                                <a asp-controller="Surveillant" asp-action="GroupStudents" asp-route-groupId="@groupe.Id"
                                   class="btn btn-sm btn-warning text-white">
                                    <i class="fas fa-eye me-1"></i> Liste
                                </a>

                                <a asp-controller="Surveillant" asp-action="EditGroup" asp-route-id="@groupe.Id"
                                   class="btn btn-sm btn-primary">
                                    <i class="fas fa-pen me-1"></i> Modifier
                                </a>

                                <a asp-controller="Surveillant" asp-action="ManageSchedule" asp-route-groupId="@groupe.Id"
                                   class="btn btn-sm btn-success">
                                    <i class="fas fa-calendar-alt me-1"></i> Planning
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}