@* Suppression de Layout = null pour que ce fichier soit le Layout principal *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonSite</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body, html {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Conteneur principal pour toutes les pages */
        .page-container {
            width: 100%;
            max-width: 1200px;
            margin: auto;
            padding: 20px;
            flex-grow: 1;
        }

        /* Ajustement automatique des images, tables, formulaires */
        img, table, .form-control, .container, .row, .col {
            max-width: 100%;
        }

        /* Forcer le texte et les blocs à ne pas dépasser */
        * {
            box-sizing: border-box;
        }

        /* Header de la barre de navigation */
        header {
            background: #0d6efd;
            color: white;
            margin-bottom: 20px;
            flex-shrink: 0;
            width: 100%;
        }

        /* Pied de page collé au bas */
        footer {
            margin-top: auto;
            padding: 20px;
            background: #f1f1f1;
            text-align: center;
            flex-shrink: 0;
            width: 100%;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MonSite</a>

                @* Ajout du bouton d'activation du menu pour le responsive *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @* Conteneur du menu (ajustement de la classe pour le responsive) *@
                <div class="collapse navbar-collapse" id="navbarNav">

                    <ul class="navbar-nav flex-grow-1">

                        @* =============================================== *@
                        @* NOUVEAU : LIENS DE NAVIGATION ADMIN *@
                        @* =============================================== *@
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Admin" asp-action="PendingUsers">Approbations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-controller="Admin" asp-action="CreateUser">Créer Utilisateur</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Admin" asp-action="UsersList">Gérer Comptes</a>
                            </li>
                        }
                        @* =============================================== *@
                    </ul>

                    @* Liens d'utilisateur (alignés à droite) *@
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">Bienvenue, <strong>@User.Identity.Name</strong>!</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link text-white">
                                        Déconnexion
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="page-container">
        @RenderBody()
    </div>


    <footer>
        <p>&copy; @DateTime.Now.Year - MonSite. Tous droits réservés.</p>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>