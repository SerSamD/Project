@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonSite</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Style Responsive Global -->
    <style>
        body, html {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Conteneur principal pour toutes les pages */
        .page-container {
            width: 100%;
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }

        /* Ajustement automatique des images, tables, formulaires */
        img, table, .form-control, .container, .row, .col {
            max-width: 100%;
        }

        /* Forcer le texte et les blocs à ne pas dépasser */
        * {
            box-sizing: border-box;
        }

        /* Header */
        header {
            background: #0d6efd;
            color: white;
            padding: 12px 20px;
            margin-bottom: 20px;
        }

        footer {
            margin-top: 40px;
            padding: 20px;
            background: #f1f1f1;
            text-align: center;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>

 

    <!-- CONTENU DE TOUTES LES PAGES -->
    <div class="page-container">
        @RenderBody()
    </div>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
