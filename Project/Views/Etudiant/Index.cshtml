@model Project.Models.Etudiant

@{
  ViewData["Title"] = "Espace Étudiant";
}

<div class="dashboard-page">
    <div class="page-header fade-in-up">
        <div>
    <h1 class="page-title">Mon Espace Étudiant</h1>
   <p class="page-subtitle">
   Bonjour, <strong>@Model?.Utilisateur?.Prenom @Model?.Utilisateur?.Nom</strong> !
       @if (Model?.Groupe != null)
     {
          <span class="badge bg-primary ms-2"><i class="fas fa-users me-1"></i>@Model.Groupe.Nom</span>
        }
    else
     {
        <span class="badge bg-warning text-dark ms-2"><i class="fas fa-exclamation-triangle me-1"></i>Aucun groupe assigné</span>
        }
      </p>
        </div>
    </div>

    <div class="action-cards-grid fade-in-up">
        <a asp-controller="Etudiant" asp-action="MySchedule" class="action-card">
    <div class="action-card-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <i class="fas fa-calendar-alt"></i>
            </div>
       <h3 class="action-card-title">Mon Planning</h3>
            <p class="action-card-description">
        Consultez votre emploi du temps de la semaine et ne manquez aucun cours
            </p>
        </a>

        <a asp-controller="Etudiant" asp-action="MyGrades" class="action-card">
   <div class="action-card-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
       <i class="fas fa-graduation-cap"></i>
            </div>
    <h3 class="action-card-title">Mes Notes</h3>
    <p class="action-card-description">
    Consultez vos résultats et bulletins validés par vos enseignants
            </p>
        </a>
    </div>

    @if (Model?.Groupe == null)
    {
        <div class="empty-state mt-4">
   <div class="empty-state-icon">
       <i class="fas fa-info-circle"></i>
   </div>
 <h3 class="empty-state-title">Groupe non assigné</h3>
    <p class="empty-state-description">
      Vous n'êtes pas encore assigné à un groupe. Contactez l'administration pour plus d'informations.
            </p>
        </div>
    }
</div>