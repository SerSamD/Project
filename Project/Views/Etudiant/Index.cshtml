@model Project.Models.Etudiant

@{
    ViewData["Title"] = "Espace Étudiant";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-dark">Mon Espace</h2>
            <p class="text-muted mb-0">
                Bonjour, <strong>@Model?.Utilisateur?.Prenom</strong>.
                @if (Model?.Groupe != null)
                {
                    <span>Vous êtes dans le groupe <span class="badge bg-primary">@Model.Groupe.Nom</span></span>
                }
                else
                {
                    <span class="text-danger">Aucun groupe assigné.</span>
                }
            </p>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 h-100 text-center hover-card">
                <div class="card-body p-5">
                    <div class="bg-light rounded-3 d-inline-flex p-3 mb-3 text-primary">
                        <i class="fas fa-calendar-alt fa-4x"></i>
                    </div>
                    <h3 class="fw-bold">Mon Planning</h3>
                    <p class="text-muted">Consultez votre emploi du temps de la semaine.</p>
                    <a asp-controller="Etudiant" asp-action="MySchedule" class="btn btn-primary px-4 rounded-pill mt-3">
                        Voir le planning
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow border-0 h-100 text-center hover-card">
                <div class="card-body p-5">
                    <div class="bg-light rounded-3 d-inline-flex p-3 mb-3 text-success">
                        <i class="fas fa-graduation-cap fa-4x"></i>
                    </div>
                    <h3 class="fw-bold">Mes Résultats</h3>
                    <p class="text-muted">Consultez vos notes et bulletins validés.</p>
                    <a asp-controller="Etudiant" asp-action="MyGrades" class="btn btn-success px-4 rounded-pill mt-3">
                        Voir mes notes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card:hover {
        transform: translateY(-5px);
        transition: 0.3s;
    }
</style>