@model IEnumerable<Project.Models.EmploiDuTemps>

@{
    ViewData["Title"] = "Mon Emploi du Temps";
}

<h2 class="mb-4">
    Emploi du temps <span class="badge bg-info text-dark">@ViewBag.GroupName</span>
</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
}
else if (!Model.Any())
{
    <div class="alert alert-info">Aucun cours planifié pour votre groupe.</div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Jour</th>
                        <th>Horaire</th>
                        <th>Matière</th>
                        <th>Enseignant</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@item.Jour</span></td>
                            <td>@item.HeureDebut.ToString(@"hh\:mm") - @item.HeureFin.ToString(@"hh\:mm")</td>
                            <td class="fw-bold text-primary">@item.Cours?.Titre</td>
                            <td>
                                <i class="fas fa-user-tie me-2 text-muted"></i>
                                @item.Enseignant?.Utilisateur?.Nom
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}