@model Etudiant

@{
    ViewData["Title"] = "Tableau de Bord Étudiant";
    // Récupérer les notes par cours pour un affichage facile
    var notesParCours = Model.Notes.GroupBy(n => n.Cours).ToList();
}

<div class="container py-5">

    <h1 class="mb-4">Bienvenue, @ViewBag.NomComplet!</h1>
    <p class="lead">Ceci est votre tableau de bord étudiant. Vous trouverez ci-dessous votre profil, vos cours inscrits et vos notes.</p>
    <hr class="mb-5" />

    <div class="row mb-5">
        <div class="col-md-6">
            <h3>👤 Votre Profil</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Nom:</strong> @Model.Nom</li>
                <li class="list-group-item"><strong>Prénom:</strong> @Model.Prenom</li>
                <li class="list-group-item"><strong>Email:</strong> @ViewBag.Email</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h3>📖 Cours Inscrits (@Model.Inscriptions.Count)</h3>
            @if (!Model.Inscriptions.Any())
            {
                <div class="alert alert-warning mt-2">Vous n'êtes inscrit à aucun cours.</div>
            }
            else
            {
                <ul class="list-group mt-2">
                    @foreach (var inscription in Model.Inscriptions)
                    {
                        <li class="list-group-item">
                            @inscription.Cours.Titre
                            <span class="badge bg-secondary float-end">Inscrit le @inscription.DateInscription.ToShortDateString()</span>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h3 class="mb-3">💯 Vos Notes</h3>

            @if (!Model.Notes.Any())
            {
                <div class="alert alert-info">Aucune note n'a encore été enregistrée pour vous.</div>
            }
            else
            {
                @foreach (var group in notesParCours)
                {
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5>@group.Key.Titre</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            @foreach (var note in group)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <strong>@note.TypeEvaluation:</strong>
                                        Note enregistrée le @note.DateNote.ToShortDateString()
                                    </span>
                                    <span class="badge bg-success fs-6">
                                        @note.Valeur / 20
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                }
            }
        </div>
    </div>
</div>@*
