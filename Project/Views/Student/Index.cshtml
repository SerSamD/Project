@model Etudiant // Votre modèle de classe Etudiant
@{
    ViewData["Title"] = "Tableau de Bord Étudiant";
}

<div class="container mt-4">

    <h2>Bienvenue, @ViewBag.NomComplet !</h2>
    <p>Ceci est votre tableau de bord étudiant. Vous trouverez ci-dessous votre profil, vos cours inscrits et vos notes.</p>
    <hr />

    <div class="mb-4 text-end">
        <a asp-controller="Student" asp-action="AvailableCourses" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> S'inscrire à un nouveau cours
        </a>
    </div>

    <ul class="nav nav-tabs" id="studentDashboardTab" role="tablist">

        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-content" type="button" role="tab" aria-controls="profile-content" aria-selected="true">
                <i class="fas fa-user"></i> Votre Profil
            </button>
        </li>

        <li class="nav-item" role="presentation">
            <button class="nav-link" id="courses-tab" data-bs-toggle="tab" data-bs-target="#courses-content" type="button" role="tab" aria-controls="courses-content" aria-selected="false">
                <i class="fas fa-book"></i> Cours Inscrits (@Model.Inscriptions.Count)
            </button>
        </li>

        <li class="nav-item" role="presentation">
            <button class="nav-link" id="grades-tab" data-bs-toggle="tab" data-bs-target="#grades-content" type="button" role="tab" aria-controls="grades-content" aria-selected="false">
                <i class="fas fa-medal"></i> Vos Notes (@Model.Notes.Count)
            </button>
        </li>
    </ul>

    <div class="tab-content pt-3" id="studentDashboardTabContent">

        <div class="tab-pane fade show active" id="profile-content" role="tabpanel" aria-labelledby="profile-tab">
            <h3>Profil Personnel</h3>
            <div class="card card-body">
                <dl class="row">
                    <dt class="col-sm-3">Nom Complet :</dt>
                    <dd class="col-sm-9">@ViewBag.NomComplet</dd>

                    <dt class="col-sm-3">Nom d'utilisateur :</dt>
                    <dd class="col-sm-9">@Model.Utilisateur.NomUtilisateur</dd>

                    <dt class="col-sm-3">Email :</dt>
                    <dd class="col-sm-9">@ViewBag.Email</dd>

                    <dt class="col-sm-3">Statut :</dt>
                    <dd class="col-sm-9">Étudiant</dd>
                </dl>
            </div>
        </div>

        <div class="tab-pane fade" id="courses-content" role="tabpanel" aria-labelledby="courses-tab">
            <h3>Liste des Cours Inscrits</h3>
            @if (Model.Inscriptions.Any())
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Cours</th>
                            <th>Description</th>
                            <th>Date d'Inscription</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var inscription in Model.Inscriptions.OrderBy(i => i.Cours.Titre))
                        {
                            <tr>
                                <td>**@inscription.Cours.Titre**</td>
                                <td>@inscription.Cours.Description</td>
                                <td>@inscription.DateInscription.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning">
                    Vous n'êtes inscrit à aucun cours pour le moment.
                    <a asp-action="AvailableCourses">Cliquez ici pour vous inscrire.</a>
                </div>
            }
        </div>

        <div class="tab-pane fade" id="grades-content" role="tabpanel" aria-labelledby="grades-tab">
            <h3>Détail de Vos Notes</h3>
            @if (Model.Notes.Any())
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Cours</th>
                            <th>Type d'Évaluation</th>
                            <th>Note</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var note in Model.Notes.OrderByDescending(n => n.DateNote))
                        {
                            <tr>
                                <td>@note.Cours.Titre</td>
                                <td>@note.TypeEvaluation</td>
                                <td>**@note.Valeur** / 20</td>
                                <td>@note.DateNote.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    Aucune note n'a encore été enregistrée pour vous.
                </div>
            }
        </div>

    </div>
</div>

@section Scripts {
    <script>
        // Si vous utilisez Bootstrap, vous n'avez pas besoin de script additionnel
        // si data-bs-toggle="tab" est correctement inclus.
    </script>
}