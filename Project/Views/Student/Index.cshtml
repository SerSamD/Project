@model Project.Models.Etudiant
@{
    ViewData["Title"] = "Tableau de Bord Étudiant";
    var nomComplet = ViewBag.NomComplet as string ?? "Étudiant";
}

<div class="container mt-4">

    <h2>Bienvenue, @nomComplet !</h2>
    <p>Ceci est votre tableau de bord étudiant. Vous trouverez ci-dessous votre profil et vos résultats.</p>
    <hr />

    <div class="mb-4 text-end">
        <a asp-controller="Student" asp-action="AvailableCourses" class="btn btn-primary">
            <i class="fas fa-list"></i> Voir les Cours Disponibles
        </a>
    </div>

    <ul class="nav nav-tabs" id="studentDashboardTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-content" type="button" role="tab" aria-controls="profile-content" aria-selected="true">
                <i class="fas fa-user"></i> Votre Profil
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="grades-tab" data-bs-toggle="tab" data-bs-target="#grades-content" type="button" role="tab" aria-controls="grades-content" aria-selected="false">
                <i class="fas fa-medal"></i> Vos Notes (@(Model.Notes?.Count ?? 0))
            </button>
        </li>
    </ul>

    <div class="tab-content pt-3" id="studentDashboardTabContent">

        <!-- Profil Étudiant -->
        <div class="tab-pane fade show active" id="profile-content" role="tabpanel" aria-labelledby="profile-tab">
            <h3>Profil Personnel</h3>
            <div class="card card-body shadow-sm">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Nom Complet :</dt>
                    <dd class="col-sm-9">@nomComplet</dd>

                    <dt class="col-sm-3">Nom d'utilisateur :</dt>
                    <dd class="col-sm-9">@Model.Utilisateur?.NomUtilisateur</dd>

                    <dt class="col-sm-3">Email :</dt>
                    <dd class="col-sm-9">@Model.Utilisateur?.Email</dd>

                    <dt class="col-sm-3">Statut :</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info text-dark">Étudiant</span>
                    </dd>
                </dl>
            </div>
        </div>

        <!-- Notes Étudiant -->
        <div class="tab-pane fade" id="grades-content" role="tabpanel" aria-labelledby="grades-tab">
            <h3>Détail de Vos Notes</h3>

            @if (Model.Notes != null && Model.Notes.Any())
            {
                <table class="table table-striped table-hover shadow-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>Cours</th>
                            <th>Type d'Évaluation</th>
                            <th>Note</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var note in Model.Notes.OrderByDescending(n => n.DateNote))
                        {
                            <tr>
                                <td>@note.Cours?.Titre</td>
                                <td>@note.TypeEvaluation</td>
                                <td class="fw-bold">@note.Valeur / 20</td>
                                <td>@note.DateNote.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Aucune note n'a encore été enregistrée pour vous.
                </div>
            }
        </div>

    </div>
</div>

@section Scripts {
    <script>
        // Initialisation optionnelle des tabs Bootstrap (si besoin)
        var triggerTabList = [].slice.call(document.querySelectorAll('#studentDashboardTab button'))
        triggerTabList.forEach(function (triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl)

            triggerEl.addEventListener('click', function (event) {
                event.preventDefault()
                tabTrigger.show()
            })
        })
    </script>
}
