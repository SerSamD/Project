@model Project.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Connexion";
    Layout = "_Layout";
}

@section Styles {
 <link rel="stylesheet" href="~/css/login-page.css" />
}

<div class="login-page-wrapper">
    <div class="login-background-overlay"></div>
    
    <div class="container">
        <div class="row min-vh-100 align-items-center justify-content-center">
<div class="col-md-10 col-lg-9 col-xl-8">
             <div class="row g-0 login-card-wrapper">
           
       <!-- Left Side - Image avec overlay -->
           <div class="col-md-6 login-image-side">
          <div class="login-image-content">
           <div class="login-brand mb-4">
         <i class="fas fa-graduation-cap fa-3x mb-3"></i>
        <h2 class="fw-bold">Plateforme Éducative</h2>
             <p class="lead">Votre espace d'apprentissage digital</p>
     </div>
  <div class="login-features mt-5">
      <div class="feature-item">
       <i class="fas fa-check-circle"></i>
       <span>Accès à vos cours en ligne</span>
             </div>
          <div class="feature-item">
         <i class="fas fa-check-circle"></i>
             <span>Suivi de vos notes en temps réel</span>
        </div>
              <div class="feature-item">
       <i class="fas fa-check-circle"></i>
      <span>Communication avec vos enseignants</span>
            </div>
                  </div>
        </div>
          </div>

  <!-- Right Side - Login Form -->
<div class="col-md-6 login-form-side">
       <div class="login-form-content">
  <div class="text-center mb-4">
           <div class="login-icon-wrapper">
  <i class="fas fa-user-lock"></i>
       </div>
           <h2 class="fw-bold mt-3">Bienvenue !</h2>
   <p class="text-muted">
                 Connectez-vous pour accéder à votre espace
      </p>
       </div>

             <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
     <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

      <div class="mb-3">
           <label asp-for="NomUtilisateur" class="form-label">
        <i class="fas fa-user me-2"></i>Nom d'utilisateur
   </label>
   <input asp-for="NomUtilisateur" class="form-control" placeholder="Entrez votre nom d'utilisateur" />
   <span asp-validation-for="NomUtilisateur" class="text-danger small"></span>
    </div>

        <div class="mb-4">
  <label asp-for="MotDePasse" class="form-label">
  <i class="fas fa-lock me-2"></i>Mot de passe
       </label>
       <input asp-for="MotDePasse" type="password" class="form-control" placeholder="Entrez votre mot de passe" />
          <span asp-validation-for="MotDePasse" class="text-danger small"></span>
     </div>

     <button type="submit" class="btn btn-primary w-100 py-3 mb-3">
                 <i class="fas fa-sign-in-alt me-2"></i>
                  Se connecter
     </button>
    </form>

   <div class="text-center mt-4 pt-3 border-top">
 <p class="text-muted mb-0">
            Pas encore de compte ?
     <a asp-action="Register" class="text-decoration-none fw-bold">
       Créer un compte
    </a>
     </p>
         </div>
     </div>
            </div>
        </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
     await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}