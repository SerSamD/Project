@model Project.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Connexion";
}

<style>
    /* Force toute la page à occuper 100% de la hauteur */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden; /* Supprime le scroll */
    }
</style>

<!-- Conteneur centré sans scroll -->
<div style="
    display:flex;
    justify-content:center;
    align-items:center;
    height:100vh;
    width:100%;
">
    <div style="width:380px;">

        <h2 class="text-center mb-4">Connexion à la Plateforme</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Nom d'utilisateur -->
            <div class="form-group mb-3">
                <label asp-for="NomUtilisateur"></label>
                <input asp-for="NomUtilisateur" class="form-control" />
                <span asp-validation-for="NomUtilisateur" class="text-danger"></span>
            </div>

            <!-- Mot de passe -->
            <div class="form-group mb-3">
                <label asp-for="MotDePasse"></label>
                <input asp-for="MotDePasse" class="form-control" />
                <span asp-validation-for="MotDePasse" class="text-danger"></span>
            </div>

            <!-- Bouton Se connecter -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
            </div>
        </form>

        <hr />

        <!-- Lien de création de compte -->
        <div class="text-center mt-3">
            <p>Vous n'avez pas de compte ?</p>
            <a asp-action="Register" class="btn btn-outline-success">Créer un compte</a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
