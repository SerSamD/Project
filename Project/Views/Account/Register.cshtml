@{
    ViewData["Title"] = "Créer un Compte";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/modern-pages.css" />
}

<div class="register-page-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="register-card">
                    <div class="card-body p-4 p-md-5">
                        <div class="register-header">
                            <div class="register-icon">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <h2 class="fw-bold mb-2">Créer un Compte</h2>
                            <p class="text-muted">Choisissez le type de compte que vous souhaitez créer
                            </p>
                        </div>

                        <div class="mt-4">
                            <a asp-action="RegisterStudent" class="role-card role-card-primary">
                                <div class="role-card-icon">
                                    <i class="fas fa-user-graduate"></i>
                                </div>
                                <div class="role-card-content">
                                    <h5>Compte Étudiant</h5>
                                    <p>Accédez à vos cours, consultez vos notes et votre emploi du temps</p>
                                </div>
                                <i class="fas fa-chevron-right role-card-arrow"></i>
                            </a>

                            <a asp-action="RegisterTeacher" class="role-card role-card-success">
                                <div class="role-card-icon">
                                    <i class="fas fa-chalkboard-teacher"></i>
                                </div>
                                <div class="role-card-content">
                                    <h5>Compte Enseignant</h5>
                                    <p>Gérez vos classes, saisissez les notes et suivez vos étudiants</p>
                                </div>
                                <i class="fas fa-chevron-right role-card-arrow"></i>
                            </a>

                            <a asp-action="RegisterSupervisor" class="role-card role-card-warning">
                                <div class="role-card-icon">
                                    <i class="fas fa-user-tie"></i>
                                </div>
                                <div class="role-card-content">
                                    <h5>Compte Surveillant</h5>
                                    <p>Gérez les groupes, plannings et suivez les résultats</p>
                                </div>
                                <i class="fas fa-chevron-right role-card-arrow"></i>
                            </a>
                        </div>

                        <div class="text-center mt-4 pt-4 border-top">
                            <p class="text-muted mb-2">Vous avez déjà un compte ?</p>
                            <a asp-action="Login" class="btn btn-outline-primary">
                                <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
