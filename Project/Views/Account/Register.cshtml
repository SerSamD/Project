@{
    ViewData["Title"] = "Créer un Compte";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-md-10 col-lg-8 col-xl-6">

        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-5">

                <div class="text-center mb-4">
                    <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                    <h2 class="fw-bold">Créer un Compte</h2>
                    <p class="text-muted">Quel type de compte souhaitez-vous créer ?</p>
                </div>

                <div class="d-grid gap-3">
                    <a asp-action="RegisterStudent"
                       class="btn btn-outline-primary p-3 text-start d-flex align-items-center transition-hover">

                        <div class="bg-primary text-white rounded-circle p-3 me-3
                                    d-flex align-items-center justify-content-center"
                             style="width:50px;height:50px;">
                            <i class="fas fa-user-graduate fa-lg"></i>
                        </div>

                        <div>
                            <h5 class="fw-bold mb-0">Compte Étudiant</h5>
                            <small class="text-muted">
                                Accédez aux cours, consultez vos notes.
                            </small>
                        </div>

                        <i class="fas fa-chevron-right ms-auto text-primary"></i>
                    </a>

                    <a asp-action="RegisterTeacher"
                       class="btn btn-outline-success p-3 text-start d-flex align-items-center transition-hover">

                        <div class="bg-success text-white rounded-circle p-3 me-3
                                    d-flex align-items-center justify-content-center"
                             style="width:50px;height:50px;">
                            <i class="fas fa-chalkboard-teacher fa-lg"></i>
                        </div>

                        <div>
                            <h5 class="fw-bold mb-0">Compte Enseignant</h5>
                            <small class="text-muted">
                                Gérez vos classes et notez les étudiants.
                            </small>
                        </div>

                        <i class="fas fa-chevron-right ms-auto text-success"></i>
                    </a>
                </div>

                <div class="text-center mt-4 pt-3 border-top">
                    <p class="text-muted small mb-0">Vous avez déjà un compte ?</p>
                    <a asp-action="Login" class="fw-bold text-decoration-none">
                        Se connecter ici
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>

<style>
    .transition-hover {
        transition: all 0.2s ease-in-out;
        border-width: 2px;
    }

        .transition-hover:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            background-color: white !important;
        }

    .btn-outline-primary:hover {
        border-color: #0d6efd;
        color: #000;
    }

    .btn-outline-success:hover {
        border-color: #198754;
        color: #000;
    }
</style>
