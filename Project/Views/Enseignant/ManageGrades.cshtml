@model Project.ViewModels.GradeManagementViewModel

@{
    ViewData["Title"] = "Saisie des Notes";
}

<h2 class="mb-4">Saisie des Notes</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form method="get" asp-action="ManageGrades" class="row g-3 align-items-end">
            <div class="col-md-5">
                <label class="form-label fw-bold">Groupe</label>
                <select name="groupId" class="form-select" asp-items="Model.Groupes" onchange="this.form.submit()">
                    <option value="">-- Choisir un groupe --</option>
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label fw-bold">Matière</label>
                <select name="coursId" class="form-select" asp-items="Model.Cours" onchange="this.form.submit()">
                    <option value="">-- Choisir une matière --</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Charger</button>
            </div>
        </form>
    </div>
</div>

@if (Model.SelectedGroupId.HasValue && Model.SelectedCoursId.HasValue)
{
    <form asp-action="SaveGrades" method="post">
        <input type="hidden" asp-for="SelectedGroupId" />
        <input type="hidden" asp-for="SelectedCoursId" />

        <div class="card shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="m-0 text-primary">Liste des étudiants</h5>

                <div class="d-flex align-items-center">
                    <label class="me-2 fw-bold">Type :</label>
                    <select asp-for="TypeEvaluation" class="form-select form-select-sm" style="width: auto;">
                        <option value="Examen">Examen</option>
                        <option value="Devoir">Devoir</option>
                        <option value="TP">TP</option>
                        <option value="Rattrapage">Rattrapage</option>
                    </select>
                </div>
            </div>

            <div class="card-body p-0">
                <table class="table table-bordered mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Étudiant</th>
                            <th style="width: 150px;">Note (/20)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Students.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="Students[i].EtudiantId" />
                                    <input type="hidden" asp-for="Students[i].EtudiantNom" />
                                    <span class="fw-bold">@Model.Students[i].EtudiantNom</span>
                                </td>
                                <td>
                                    <input asp-for="Students[i].Note" type="number" step="0.01" min="0" max="20" class="form-control text-center" placeholder="-" />
                                </td>
                            </tr>
                        }
                        @if (Model.Students.Count == 0)
                        {
                            <tr><td colspan="2" class="text-center p-3 text-muted">Aucun étudiant dans ce groupe.</td></tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Students.Count > 0)
            {
                <div class="card-footer bg-white">
                    <button type="submit" class="btn btn-success float-end fw-bold">
                        <i class="fas fa-save me-2"></i> Enregistrer
                    </button>
                </div>
            }
        </div>
    </form>
}
else
{
    <div class="alert alert-info">Veuillez sélectionner un groupe et une matière.</div>
}