@{
    ViewData["Title"] = "Espace Enseignant";
}

<div class="dashboard-page">
    <div class="page-header fade-in-up">
        <div>
            <h1 class="page-title">Espace Enseignant</h1>
            <p class="page-subtitle">
                Bienvenue, Professeur ! Gérez vos cours et vos évaluations depuis cet espace.
            </p>
        </div>
    </div>

    <div class="action-cards-grid fade-in-up">
        <a asp-controller="Enseignant" asp-action="MySchedule" class="action-card">
            <div class="action-card-icon"
                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="fas fa-calendar-week"></i>
            </div>
            <h3 class="action-card-title">Mon Planning</h3>
            <p class="action-card-description">
                Consultez vos horaires de cours, vos salles et vos groupes assignés
            </p>
        </a>

        <a asp-controller="Enseignant" asp-action="ManageGrades" class="action-card">
            <div class="action-card-icon"
                style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <i class="fas fa-marker"></i>
            </div>
            <h3 class="action-card-title">Saisie des Notes</h3>
            <p class="action-card-description">
                Évaluez vos étudiants et enregistrez les notes par matière et par groupe
            </p>
        </a>
    </div>
</div>